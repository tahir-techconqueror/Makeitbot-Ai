# Firebase
FIREBASE_SERVICE_ACCOUNT_KEY=<base64_encoded_service_account_json>
# Optional aliases used by some environments/deploy systems
FIREBASE_ADMIN_BASE64=<base64_encoded_service_account_json>
FIREBASE_ADMIN_JSON=<raw_service_account_json>
FIREBASE_PROJECT_ID=your-firebase-project-id
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Payments - CannPay (PRIMARY - Official Partner)
CANPAY_MODE=sandbox
CANPAY_APP_KEY=xxx
CANPAY_API_SECRET=xxx
CANPAY_INTEGRATOR_ID=xxx
CANPAY_INTERNAL_VERSION=xxx

# Payments - Stripe (OPTIONAL - Customer Provided)
STRIPE_SECRET_KEY=sk_test_xxx

# Payments - Other (OPTIONAL)
AUTHNET_API_LOGIN_ID=xxx
AUTHNET_TRANSACTION_KEY=xxx
AUTHNET_ENV=sandbox
NEXT_PUBLIC_AUTHNET_CLIENT_KEY=xxx
NEXT_PUBLIC_AUTHNET_API_LOGIN_ID=xxx
SMOKEY_PAY_API_KEY=xxx
CANPAY_WEBHOOK_SECRET=xxx

# Email (Mailjet)
MAILJET_API_KEY=xxx
MAILJET_SECRET_KEY=xxx
MAILJET_SENDER_EMAIL=orders@markitbot.com
MAILJET_SENDER_NAME=markitbot AI
# Optional: Force one sender for all campaign emails (recommended)
CAMPAIGN_FROM_EMAIL=campaigns@your-domain.com
CAMPAIGN_FROM_NAME=Your Brand Campaigns

# CannMenus
CANNMENUS_API_KEY=xxx
CANNMENUS_API_BASE=https://api.cannmenus.com

# AI/Tools
# REQUIRED: Gemini API (for carousel generation, content creation, agent reasoning)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=xxx
# Alternative: GOOGLE_API_KEY=xxx

# REQUIRED: Firebase Web API Key (for Authentication, Firestore, Storage)
# This is DIFFERENT from GEMINI_API_KEY above!
# Get from: Firebase Console > Project Settings > General > Your apps > Web API Key
NEXT_PUBLIC_FIREBASE_API_KEY=xxx

# OPTIONAL: Claude API (for Claude-powered agents)
CLAUDE_API_KEY=sk-ant-xxx
LETTA_API_KEY=xxx

# OPTIONAL: Search and other Google services
SERPER_API_KEY=xxx
FIRECRAWL_API_KEY=xxx
GOOGLE_SEARCH_API_KEY=xxx
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=xxx
GOOGLE_SHEETS_API_KEY=xxx
GA4_PROPERTY_ID=123456789
SEARCH_CONSOLE_SITE_URL=https://your-domain.com

# Security
RECAPTCHA_SECRET_KEY=xxx
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=xxx

# Admin API Keys (used for protected admin endpoints)
ADMIN_SEED_KEY=your-secure-random-key-here
CRON_SECRET=your-cron-secret-here

# Monitoring
SENTRY_DSN=https://xxx@sentry.io/xxx
# Set true to force console logging and disable Cloud Logging SDK writes
DISABLE_GCP_LOGGING=false

# Email (SendGrid - optional fallback for email tools)
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM_EMAIL=noreply@your-domain.com
SENDGRID_FROM_NAME=markitbot AI

# SMS
BLACKLEAF_API_KEY=xxx
BLACKLEAF_BASE_URL=https://api.blackleaf.io

# Monitoring
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Dev
NEXT_PUBLIC_DEV_AUTH_BYPASS=false

# Feature Flags
# Role-Based Ground Truth: Enable database-backed quick actions (defaults to hardcoded if false/unset)
NEXT_PUBLIC_USE_DB_QUICK_ACTIONS=false

# Essex Apothecary Integration (used by admin/fix-essex action)
ESSEX_DUTCHIE_STORE_ID=your-dutchie-store-id
ESSEX_DUTCHIE_API_KEY=your-dutchie-api-key
